{
  "name": "mern-perfume-backend",
  "version": "0.1.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "node --watch server.js",
    "start": "node server.js",
    "lint": "echo 'no linter configured'",
    "kill-port": "lsof -ti:${PORT:-4000} | xargs kill -9 2>/dev/null || echo 'Port already free'",
    "dev:clean": "npm run kill-port && npm run dev",
    "create-admin": "node scripts/createAdmin.js",
    "seed:brands": "node scripts/seedBrands.js",
    "seed:admin": "node scripts/createAdmin.js",
    "seed:all": "npm run seed:admin && npm run seed:brands",
    "test:admin": "node test-admin-stats.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  }
}
